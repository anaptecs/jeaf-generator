	else getJackson3Subpackage().toSubpackagePath(); 
		
String toSubpackagePath(String subpackageName):
	if subpackageName.trim().length > 0
	then "/" + subpackageName
	else "";

boolean isJacksonVersion2(String jacksonVersion):
	jacksonVersion == "JACKSON_2";

boolean isJacksonVersion3(String jacksonVersion):
	jacksonVersion == "JACKSON_3";

cached boolean isJackson2Enabled():
	getJacksonVersions().contains("JACKSON_2");

cached boolean isJackson3Enabled():
	getJacksonVersions().contains("JACKSON_3");

